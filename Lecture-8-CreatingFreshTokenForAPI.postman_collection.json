		{
			"name": "5-UpdateBooking",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.sendRequest(\r",
							"    {\r",
							"        url: pm.environment.get(\"baseURL\")+'/auth',\r",
							"        method: 'POST',\r",
							"        header: {\r",
							"            'Content-Type': 'application/json'\r",
							"        },\r",
							"        body: {\r",
							"            mode: 'raw',\r",
							"            raw: JSON.stringify({\r",
							"                \"username\": pm.environment.get(\"username\"),\r",
							"                \"password\": pm.environment.get(\"password\")\r",
							"            })\r",
							"        }\r",
							"    }, \r",
							"    function(error, response) {\r",
							"        if (error) {\r",
							"            console.log(\"Error: \", error);\r",
							"        } else {\r",
							"            console.log(\"Full Response: \", response.text());  // Debug line\r",
							"            const responseData = JSON.parse(response.text());\r",
							"            const tokenID = responseData.token;\r",
							"            console.log(\"Token ID is = \" + tokenID);\r",
							"            pm.variables.set(\"booking_token_ID\", tokenID);\r",
							"        }\r",
							"    }\r",
							");"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Cookie",
						"value": "token={{booking_token_ID}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"firstname\" : \"Pooja\",\n    \"lastname\" : \"Khatiyan\",\n    \"totalprice\" : 111,\n    \"depositpaid\" : true,\n    \"bookingdates\" : {\n        \"checkin\" : \"2018-01-01\",\n        \"checkout\" : \"2019-01-01\"\n    },\n    \"additionalneeds\" : \"Breakfast\"\n}",
					"options": {
