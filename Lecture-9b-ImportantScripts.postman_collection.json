		{
			"name": "4-ParseHTMLResponseViaCheerioApi",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"require ('cheerio');\r",
							"pm.test(\"Body contains The Internet\", function(){\r",
							"    pm.expect(pm.response.text()).to.include(\"The Internet\");\r",
							"});\r",
							"\r",
							"pm.test(\"Body contains Form Attribute\", function(){\r",
							"const res = cheerio.load(pm.response.text());\r",
							"const loginForm = res('[name=\"login\"]');\r",
							"console.log(\"login form = \" + loginForm);\r",
							"const formAction = loginForm.attr(\"action\");\r",
							"console.log(\"action = \" + formAction);\r",
							"console.log(\"form length = \" + loginForm.length);\r",
							"pm.expect(loginForm.length).to.be.above(0);\r",
							"pm.expect(loginForm.find(\"#username\").length).to.be.equal(1);\r",
							"pm.expect(loginForm.find(\"#password\").length).to.be.equal(1);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://the-internet.herokuapp.com/login",
					"protocol": "https",
					"host": [
						"the-internet",
						"herokuapp",
						"com"
					],
					"path": [
						"login"
					]
				}
			},
